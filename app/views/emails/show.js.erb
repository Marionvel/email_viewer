$(document).ready(function(){
	$('.emailcontent').hide(); //hiding (reset) all the mail divs
	$('.read').css({'background-color': 'whitesmoke'}); //set all read tabs at the same background /text color
	$('#mail_<%=@email.id%>').slideDown(); //display animation

	
	$('#object_<%=@email.id%> a').css({'font-weight':'normal'}); //set the selected link on not bold and grey for "read status"
	$('#object_<%=@email.id%>').css({'background-color' : '#64B7AD', 'color':'white'}); // set the selected link tab background color
	$('#object_<%=@email.id%>').attr('class','read'); // gives the tab the class "read"	
});